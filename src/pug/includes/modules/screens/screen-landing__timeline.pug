section.screen__timeline(style='background-image: url(../../../../../../assets/img/bg__timeline.jpg)')
  .container
    .row
      h2.header__h2.col-12.text-center.--white Расчёт стоимости
    .timeline__wrapper
      ul.progress-tracker
        li.progress-step.is-active
          .progress-marker(data-text="1")
        li.progress-step
          .progress-marker(data-text="2")
        li.progress-step
          .progress-marker(data-text="3")
      form.form__steps(action="#")
        fieldset.form__steps-step
          h2.header__h2 Этап 1: Тип СРО
          .form__steps-step__body
            label.form__steps-label(for="build") СРО строителей
              input.form__steps-input-radio#build(name="type", type="radio")
              img.form__steps-check(src="assets/img/svg/form-check.svg", alt="")
            label.form__steps-label(for="project") СРО проектировщиков
              input.form__steps-input-radio#project(name="type", type="radio")
              img.form__steps-check(src="assets/img/svg/form-check.svg", alt="")
            label.form__steps-label(for="izisk") СРО изыскателей
              input.form__steps-input-radio#izisk(name="type", type="radio")
              img.form__steps-check(src="assets/img/svg/form-check.svg", alt="")
