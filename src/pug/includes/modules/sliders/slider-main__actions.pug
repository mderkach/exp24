- var slider = [{"header": "Все действия в одном клиенте", "descr": "Все взаимодействие с нами можно осуществлять дистанционно никогда не приезжая в наш офис.", "img": "./assets/img/svg/monitor-chekmark.svg", "button": "Наши услуги и цены", "link": "#"}, {"header": "Работаем по всей России ", "descr": "В каждом из 85 субьектов РФ есть компании, которые воспользовались нашими услугами.", "img": "./assets/img/svg/russia.svg", "button": "Попробуйте сейчас", "link": "#"}, {"header": "Гибкие условия сотрудничества", "descr": "Работаем с любыми компаниями от небольших ИП до больших корпораций.", "img": "./assets/img/svg/handshake.svg", "button": "Отзывы о нас", "link": "#"}];

.swiper-container.slider-main__actions
  .swiper-wrapper
    each slide in slider
      .swiper-slide.col-12.slider-main__actions--slide
        img.col-12.slider-main__actions--slide--img(src=slide.img, alt="")
        .slider-main__actions--slide--info
          h3.slider-main__actions--slide--header #{slide.header}
          p.slider-main__actions--slide--descr #{slide.descr}
          a.btn.btn__services(href=slide.link)
            | #{slide.button}
            .btn__services-arrow
              svg.btn__services-svg(xmlns='http://www.w3.org/2000/svg', width='18', height='14', viewBox='0 0 18 14')
                g
                  g
                    path(d='M11-.07l-1.5 1.5L14.07 6H0v2h14.07L9.5 12.57l1.5 1.5L18.07 7z')
  .slider-main__actions--pagination
  .slider-main__actions--controls
    .slider-main__actions--slide--prev
      img(src="./assets/img/svg/slider-chevron.svg", alt="")
    .slider-main__actions--slide--next
      img(src="./assets/img/svg/slider-chevron.svg", alt="")
